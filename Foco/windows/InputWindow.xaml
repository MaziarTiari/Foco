<Window x:Class="Foco.windows.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Foco.windows"
        mc:Ignorable="d"
        Title="InputTitle" WindowStartupLocation="CenterOwner" Closing="OnWindowClosing" Style="{StaticResource InputWindowStyle}">

    <Window.Resources>
        <ResourceDictionary Source="../resource-dictionaries/InputWindowDictionary.xaml"/>
    </Window.Resources>
    <StackPanel Style="{StaticResource InputWindowMainStackPanel}">
        <DockPanel>
            <Label Name="InputLabel" Content="Label:"/>
            <TextBox Name="InputBox" KeyDown="OnKeyDown" MaxLines="1" MaxLength="30"/>
        </DockPanel>
        <DockPanel Style="{StaticResource ConfirmButtonPanel}">
            <Button Content="Abbrechen" Tag="Cancel" Click="OnButtonClicked"/>
            <Button Content="Speichern" Tag="Save" Name="SaveButton" Click="OnButtonClicked" Style="{StaticResource ConfirmButton}"/>
        </DockPanel>
    </StackPanel>

</Window>
