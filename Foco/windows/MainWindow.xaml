<Window x:Class="Foco.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Foco"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        
        <!-- Menüleiste -->
        <Border DockPanel.Dock="Top" Height="75" Background="Black">
            <Grid>
                <Button Name="Home" Tag="Home" Width="55" Height="55" Margin="10,10,730,10" Click="OnMenuButtonClick">Home</Button>
                <Button Name="Board" Tag="Board" Width="55" Height="55" Visibility="Hidden" Margin="307,10,432.6,10.2" Click="OnMenuButtonClick">Board</Button>
                <Button Name="Calender"  Tag="Calendar" Width="55" Height="55" Visibility="Hidden" Margin="366,10,373.6,10.2" Click="OnMenuButtonClick">Calendar</Button>
                <Button Name="List" Tag="List" Width="55" Height="55" Visibility="Hidden" Margin="425,10,314.6,10.2" Click="OnMenuButtonClick">List</Button>
            </Grid>
        </Border>
        
        <!-- Bereich für Page -->
        <Frame Name="PageFrame" DockPanel.Dock="Bottom" NavigationUIVisibility="Hidden">
        </Frame>
        
    </DockPanel>
</Window>
