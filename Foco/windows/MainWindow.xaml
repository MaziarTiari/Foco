<Window x:Class="Foco.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Foco"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        
        <!-- Menüleiste -->
        <Border DockPanel.Dock="Top" Height="75" Background="Black">
            <Grid Margin="10" Name="MenuGrid">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="55"/>
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="55"/>
                </Grid.RowDefinitions>
                
                <Button Grid.Column="0" Grid.Row="0" Tag="Home"     Click="OnMenuButtonClick">Home</Button>
                <Button Grid.Column="2" Grid.Row="0" Tag="Board"    Click="OnMenuButtonClick">Board</Button>
                <Button Grid.Column="3" Grid.Row="0" Tag="Calendar" Click="OnMenuButtonClick">Calendar</Button>
                <Button Grid.Column="4" Grid.Row="0" Tag="List"     Click="OnMenuButtonClick">List</Button>
                
            </Grid>
        </Border>
        
        <!-- Bereich für Page -->
        <Frame Name="PageFrame" DockPanel.Dock="Bottom" NavigationUIVisibility="Hidden">
        </Frame>
        
    </DockPanel>
</Window>
