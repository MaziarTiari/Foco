<UserControl x:Class="Foco.ui.ProjectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Foco.ui"
             mc:Ignorable="d" Height="100" Width="180" Margin="5" MouseLeftButtonDown="OnClicked">

    <Border Name="ProjectBorder" BorderBrush="Black" BorderThickness="2" CornerRadius="5" Height="100" Width="180" MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave">
        <DockPanel>
            <Label DockPanel.Dock="Top" Height="32" FontSize="16" FontWeight="Bold" Name="NameLabel">Musterprojekt</Label>
            <Label DockPanel.Dock="Top" Height="30" FontSize="14" Name="TasksLabel">0 / 3 Aufgaben</Label>
            <StackPanel DockPanel.Dock="Bottom" Height="38" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="EditButton" Width="36" Height="36" Click="OnEditClicked">E</Button>
                <Button Name="DeleteButton" Width="36" Height="36" Click="OnDeleteClicked">D</Button>
            </StackPanel>
        </DockPanel>
    </Border>

</UserControl>
