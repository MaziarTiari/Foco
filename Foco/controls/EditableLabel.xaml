<UserControl x:Class="Foco.controls.EditableLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Foco.controls"
             mc:Ignorable="d" MouseDoubleClick="OnDoubleClick">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Name="LabelRow" Height="*"></RowDefinition>
            <RowDefinition Name="EditRow" Height="0"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Name="EditLabel" TextWrapping="Wrap"></TextBlock>
        <TextBox Grid.Row="1" Grid.Column="0" Name="EditTextBox" TextWrapping="Wrap" PreviewKeyDown="OnKeyDown" LostFocus="OnLostFocus" AcceptsReturn="True"></TextBox>
    </Grid>
</UserControl>