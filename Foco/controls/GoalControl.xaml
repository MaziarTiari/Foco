<UserControl x:Class="Foco.ui.GoalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Foco.ui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave">
            <Label x:Name="NameLabel" FontSize="30" MouseLeftButtonDown="OnGoalClick">Ziel</Label>
            <Button Name="EditButton" Width="40" Height="40" Click="OnEditClicked">E</Button>
            <Button x:Name="DeleteButton" Width="40" Height="40" Click="OnDeleteClicked" Content="D"/>
        </StackPanel>
        <WrapPanel Name="ProjectWrap" Orientation="Horizontal"></WrapPanel>
    </StackPanel>
    
</UserControl>
