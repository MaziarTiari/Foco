<UserControl x:Class="Foco.ui.GoalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Foco.ui"
             xmlns:controls="clr-namespace:Foco.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave">
            
            <controls:EditableLabel x:Name="NameLabel" FontSize="32" FontFamily="Century Gothic" VerticalAlignment="Top" Text="Ziel" EditedCallbackFunction="OnLabelEdited"></controls:EditableLabel>
            
            <Button x:Name="DeleteButton" Width="40" Height="40" Click="OnDeleteClicked" Style="{StaticResource IconButtonStyle}" ToolTip="Ziel löschen">
                <Image Height="40" Source="/icons/icons8-delete-bin-96.png" Stretch="Fill" Width="40"/>
            </Button>
            
        </StackPanel>
        <WrapPanel Name="ProjectWrap" Orientation="Horizontal"></WrapPanel>
    </StackPanel>
</UserControl>
