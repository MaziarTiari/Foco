<UserControl x:Class="Foco.ui.GoalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Foco.ui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave">
            <Label x:Name="NameLabel" FontSize="30" MouseLeftButtonDown="OnGoalClick" FontFamily="Century Gothic" VerticalAlignment="Top" Width="60" Height="40">Ziel</Label>
            <Button x:Name="EditButton" Width="40" Height="40" Click="OnEditClicked" FontFamily="Century Gothic">
                <Image x:Name="___Foco_component_Edit_16x_png" Height="15" Source="/Foco;component/Edit_16x.png" Stretch="Fill" Width="15"/>
            </Button>
            <Button x:Name="DeleteButton" Width="40" Height="40" Click="OnDeleteClicked" FontFamily="Century Gothic">
                <Image x:Name="___Foco_component_OnTaskDeleted_16x_png" Height="15" Source="/Foco;component/OnTaskDeleted_16x.png" Stretch="Fill" Width="15"/>
            </Button>
        </StackPanel>
        <WrapPanel Name="ProjectWrap" Orientation="Horizontal"></WrapPanel>
    </StackPanel>
</UserControl>
