<UserControl x:Class="Foco.ui.TaskgroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Foco.ui"
             mc:Ignorable="d" MaxWidth="750" MinWidth="350" Height="Auto" VerticalAlignment="Top"
             d:DesignHeight="400" d:DesignWidth="800">
    
    <Border Margin="10" CornerRadius="10" BorderThickness="2" Background="Aqua" BorderBrush="Aqua" Width="Auto" Height="Auto">
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <CheckBox Name="MainCheckBox" IsChecked="False" MouseLeftButtonUp="setCheckBoxes"></CheckBox>
                <Label Name="TaskgroupHeader" Width="Auto" HorizontalAlignment="Center" BorderThickness="0" FontWeight="Bold" FontSize="14" MouseDoubleClick="CreateTaskGuiByMouse"></Label>
            </Grid>
            <StackPanel Name="TaskContainer" Width="Auto">
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
