<UserControl x:Class="Foco.controls.BoardLaneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Foco.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">

    <Border BorderBrush="Black" BorderThickness="3" Margin="10" Width="230">
        <DockPanel>
            <Label DockPanel.Dock="Top" Name="TitleLabel" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" FontSize="20" Background="LightGray">Name</Label>
            <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Hidden">
                <StackPanel Name="TaskgroupStack">
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Border>

</UserControl>
