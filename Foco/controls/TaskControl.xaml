<UserControl x:Class="Foco.ui.TaskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Foco.ui"
             mc:Ignorable="d" Width="Auto" Height="Auto"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel Width="Auto"  Margin="10" LastChildFill="True" Height="Auto">
            <CheckBox></CheckBox>
            <TextBox Name="TaskTextBox" Margin="10, 0, 0, 0" Background="Transparent" TextWrapping="Wrap" BorderThickness="0" 
                     AcceptsReturn="False" ScrollViewer.HorizontalScrollBarVisibility="Auto" KeyDown="OnKeyDownHandler">
            </TextBox>
        </DockPanel>
    </Grid>
</UserControl>
