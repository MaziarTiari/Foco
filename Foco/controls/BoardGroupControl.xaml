<UserControl x:Class="Foco.controls.BoardGroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Foco.controls"
             mc:Ignorable="d" >

    <Border BorderBrush="Black" Background="White" BorderThickness="2" CornerRadius="5" Height="130" Width="180" Margin="5" MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave" MouseLeftButtonDown="OnControlClicked">
        <DockPanel>
            <Label DockPanel.Dock="Top" Height="32" FontSize="16" FontWeight="Bold" Name="NameLabel">Gruppenbezeichnung</Label>
            <DockPanel DockPanel.Dock="Top" Height="30" Margin="5,0,5,0">
                <Border Name="PriorityBorder" DockPanel.Dock="Left" CornerRadius="5" Background="Orange" Height="25">
                    <Label FontSize="10" Name="PriorityLabel" Foreground="White">Normal</Label>
                </Border>
                <Border Name="DeadlineBorder" DockPanel.Dock="Right" CornerRadius="5" Background="DarkGray" Height="25" HorizontalAlignment="Right">
                    <Label FontSize="10" Name="DeadlineLabel" Foreground="White">28.11.2019 15:30</Label>
                </Border>
            </DockPanel>
            <Label DockPanel.Dock="Top" Height="30" FontSize="14" Name="TasksLabel">0 / 3 Aufgaben</Label>
            <StackPanel DockPanel.Dock="Bottom" Height="38" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="EditButton" Click="OnEditClicked" Width="36" Height="36">E</Button>
                <Button Name="DeleteButton" Click="OnDeleteClicked" Width="36" Height="36">D</Button>
            </StackPanel>
        </DockPanel>
    </Border>
    
</UserControl>
