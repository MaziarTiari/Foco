<Page x:Class="Foco.pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Foco.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" FontSize="20" Width="160" Height="35" Content="Ziel hinzufügen" Margin="0,0,10,0" FontFamily="Century Gothic" Click="OnAddGoalClicked">
            <Button.LayoutTransform>
                <RotateTransform Angle="90"/>
            </Button.LayoutTransform>
        </Button>
        
        <ScrollViewer Name="HomeScrollViewer" Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="HomeStackpanel" Orientation="Vertical"/>
        </ScrollViewer>

    </Grid>

</Page>
