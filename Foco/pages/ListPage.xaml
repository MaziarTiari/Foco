<Page x:Class="Foco.pages.ListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Foco.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListPage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" FontSize="20" Width="280" Height="35" Content="Aufgabengruppe hinzufügen" Margin="0,0,10,0" Click="OnAddTaskgroupClicked">
            <Button.LayoutTransform>
                <RotateTransform Angle="90"/>
            </Button.LayoutTransform>
        </Button>

        <ScrollViewer Grid.Column="1" Name="TaskgroupScroll">
            <WrapPanel Margin="20" Name="TaskgroupContainer" HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
            </WrapPanel>
        </ScrollViewer>

    </Grid>

</Page>
