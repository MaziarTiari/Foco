<Page x:Class="Foco.pages.ListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Foco.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListPage">
    <ScrollViewer>
        <StackPanel Margin="20,20,20,20">
            <Expander VerticalAlignment="Top" HorizontalAlignment="Left" Panel.ZIndex="1" ExpandDirection="Right" IsExpanded="True">
                <StackPanel>
                <Label BorderThickness="1" BorderBrush="Gray" MouseLeftButtonUp="CreateTaskgroupGui">Aufgabengruppe erstellen</Label>
                </StackPanel>
            </Expander>
            <WrapPanel Name="TaskgroupContainer" VerticalAlignment="Top" Orientation="Horizontal">
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
