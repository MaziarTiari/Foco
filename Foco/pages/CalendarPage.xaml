<Page x:Class="Foco.pages.CalendarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Foco.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CalendarPage">

    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Grid fuer Navigation -->
        <Grid Grid.Row="0">
            <Grid>
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="10 0 10 0"/>
                        <Setter Property="Width" Value="50"/>
                    </Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <DockPanel HorizontalAlignment="Right" Margin="10 10 50 10" Grid.Column="0">
                    <Button HorizontalAlignment="Left" Content="Left" Click="LastYearHandler"/>
                    <TextBlock Name="YearTag" Text="2019"/>
                    <Button HorizontalAlignment="Left" Content="right" Click="NextYearHandler"/>
                </DockPanel>
                <DockPanel Margin="50 10 10 10" Grid.Column="1">
                    <Button HorizontalAlignment="Left" Content="Left" Click="LastMonthHandler"/>
                    <TextBlock Name="MonthTag" Text="12"/>
                    <Button HorizontalAlignment="Left" Content="right" Click="NextMonthHandler"/>
                </DockPanel>
            </Grid>
        </Grid>
        
        <!-- Grid fuer Wochentage -->
        <Grid Background="GhostWhite" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>    
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Text="Sonntag"/>
            <TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Text="Montag"/>
            <TextBlock Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" Text="Dienstag"/>
            <TextBlock Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" Text="Mittwoch"/>
            <TextBlock Grid.Row="0" Grid.Column="4" HorizontalAlignment="Center" Text="Donnerstag"/>
            <TextBlock Grid.Row="0" Grid.Column="5" HorizontalAlignment="Center" Text="Freitag"/>
            <TextBlock Grid.Row="0" Grid.Column="6" HorizontalAlignment="Center" Text="Samstag"/>
        </Grid>
        
        <!-- Grid fuer DayControls -->
        <Grid Background="GhostWhite" Name="DayControlContainer" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
        </Grid>
    </Grid>
</Page>
