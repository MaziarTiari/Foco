<Page x:Class="Foco.pages.CalendarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Foco.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CalendarPage">

    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Grid fuer Navigation -->
        <Grid Grid.Row="0" Margin="10">
            <Grid>
                
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Margin" Value="10 0 10 0"/>
                        <Setter Property="Width" Value="50"/>
                    </Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </Grid.Resources>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <!-- Auswahl Jahr -->
                <Grid Grid.Column="0" HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" HorizontalAlignment="Left" Click="LastYearHandler" Style="{StaticResource IconButtonStyle}">
                        <Image Height="30" Source="/icons/icons8-chevron-left-96.png" Stretch="Fill" Width="30"/>
                    </Button>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Name="YearTag"  Text="2020" FontFamily="CenturyGothic" FontSize="22"/>
                    <Button Grid.Column="2" HorizontalAlignment="Left" Click="NextYearHandler" Style="{StaticResource IconButtonStyle}">
                        <Image Height="30" Source="/icons/icons8-chevron-right-96.png" Stretch="Fill" Width="30"/>
                    </Button>
                </Grid>
                
                <!-- Auswahl Monat-->
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" HorizontalAlignment="Left" Click="LastMonthHandler" Style="{StaticResource IconButtonStyle}">
                        <Image Height="30" Source="/icons/icons8-chevron-left-96.png" Stretch="Fill" Width="30"/>
                    </Button>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Name="MonthTag"  Text="Jan" FontFamily="CenturyGothic" FontSize="22"/>
                    <Button Grid.Column="2" HorizontalAlignment="Left" Click="NextMonthHandler" Style="{StaticResource IconButtonStyle}">
                        <Image Height="30" Source="/icons/icons8-chevron-right-96.png" Stretch="Fill" Width="30"/>
                    </Button>
                </Grid>
                
            </Grid>
        </Grid>
        
        <!-- Grid fuer Wochentage -->
        <Grid Background="GhostWhite" Grid.Row="1" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>    
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Text="Sonntag"/>
            <TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Text="Montag"/>
            <TextBlock Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" Text="Dienstag"/>
            <TextBlock Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" Text="Mittwoch"/>
            <TextBlock Grid.Row="0" Grid.Column="4" HorizontalAlignment="Center" Text="Donnerstag"/>
            <TextBlock Grid.Row="0" Grid.Column="5" HorizontalAlignment="Center" Text="Freitag"/>
            <TextBlock Grid.Row="0" Grid.Column="6" HorizontalAlignment="Center" Text="Samstag"/>
        </Grid>
        
        <!-- Grid fuer DayControls -->
        <Grid Background="GhostWhite" Name="DayControlContainer" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
        </Grid>
    </Grid>
</Page>
