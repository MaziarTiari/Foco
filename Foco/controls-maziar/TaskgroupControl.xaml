<UserControl x:Class="Foco.controls_maziar.TaskgroupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Foco.controls_maziar"
             mc:Ignorable="d" Height="Auto" Width="auto"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border>
        <StackPanel Width="Auto" Background="Aqua">
            <DockPanel Width="Auto"  Margin="10" LastChildFill="True" Background="AliceBlue" Height="Auto">
                <CheckBox></CheckBox>
                <TextBox Margin="10, 0, 0, 0"  Background="Transparent" TextWrapping="Wrap" BorderThickness="0" AcceptsReturn="True" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                </TextBox>
            </DockPanel>
        </StackPanel>
    </Border>
</UserControl>
